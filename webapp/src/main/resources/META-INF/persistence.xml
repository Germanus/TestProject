<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="contingentPersistenceUnit">
        <properties>
            <property name="org.hibernate.envers.global_with_modified_flag" value="true"/>
            <property name="org.hibernate.envers.audit_table_prefix" value="XAUD_"/>
            <property name="org.hibernate.envers.audit_table_suffix" value=""/>
        </properties>
    </persistence-unit>
</persistence>